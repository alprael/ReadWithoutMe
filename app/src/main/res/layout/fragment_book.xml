<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/fragment_book"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="#fff"
  tools:context=".controller.BookFragment">

  <WebView
    android:id="@+id/simple_webView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="20dp">
  </WebView>
  <TextView
    android:id="@+id/timer_text"
    style="@style/TextAppearance.AppCompat.Large"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:background="#FFFFFFFF"/>
  <Button
    android:id="@+id/stop_button"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_alignParentBottom="true"
    android:layout_toStartOf="@+id/quiz_button"
    android:text="@string/stop"
    android:textSize="@dimen/frag_text_button_size"/>
  <Button
    android:id="@+id/quiz_button"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:text="@string/quiz"
    android:textSize="@dimen/frag_text_button_size"/>
  <Button
    android:id="@+id/start_button"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_alignParentBottom="true"
    android:layout_toStartOf="@+id/stop_button"
    android:text="@string/start"
    android:textSize="@dimen/frag_text_button_size"/>
</RelativeLayout>
